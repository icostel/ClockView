        <attr name="clockStrokeWidth" format="integer" />
        <attr name="hourFillColor" format="color" />
        <attr name="minutesFillColor" format="color" />
        <attr name="clockRadius" format="integer" />
        <attr name="useAntiAlias" format="boolean" />
        <attr name="hour" format="integer" />
        <attr name="minutes" format="integer" />
